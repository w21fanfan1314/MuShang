@import "/weui/dist/app.wxss";
@import "/weui/dist/style/weui.wxss";

.order_product {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;

  font-size: .8rem;
  color: gainsboro;
  margin-top: 10rpx;
}

.order_site {
  margin-top: 20rpx;
  font-size: 1rem;
   color: black;
}

.order_amount{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-content: flex-end;
  align-items: flex-end;
}
.order_amount .buttons {
  margin-top: 24rpx;
}

.order_amount .buttons > button {
  margin-left: 24rpx;
}

.order_amount .money {
  color: red;
}