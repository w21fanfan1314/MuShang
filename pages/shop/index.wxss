/* pages/shop/index.wxss */

.shop_list {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: stretch;
  position: fixed;
  overflow: auto;
  z-index: 99;
  border-top: 1px solid #eee;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  height: 100%;
  width: 100%;
}

.shop_list  .city {
  flex-basis: 30%;
  flex-grow: 1;
  border-right: 1px solid #eee;
  order: 1;
  height: 100%;
}

.city_item {
  border-bottom: 1px solid #eee;
}

.select_city {
  background-color: #eee;
}

.current_city {
  font-size: 0.8rem;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.current_city text {
  margin-left: 8rpx;
}

.shops {
  flex-basis: 70%;
  flex-grow: 1;
  order: 2;
  height: 100%;
}

.shop_item {
  border-bottom: 1px solid #eee;
}
