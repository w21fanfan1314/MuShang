/* pages/user/index.wxss */
@import "/weui/dist/app.wxss";

.user-info{
  background: #eee;
  width: 100%;
  overflow-x: hidden;
}
.user-header{
  width: 100%;
  background-color: #f4c119;
}
.user-header view {
  text-align: center;
}

.user-header .image {
  margin-top: 10rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
}

.user-header .userName{
  font-size: 1rem;
  color: white;
  font-weight: bold;
}

.user-header .userId{
  font-size: .8rem;
  color: white;
}

.user-menu{
  background-color: white;
}

.second{
  margin-top: 24rpx;
}

.user-menu text{
  margin-left: 12rpx;
}

.user-header-item {
  color: white;
  font-size: 1rem;
  margin-top: 24rpx;
  margin-bottom: 32rpx;
}