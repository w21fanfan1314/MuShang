<view class='page'>
  <view class='page__bd'>
    <form class='weui-cells weui-cells_after-title'>
      <view class='form-content'>
        <view class="weui-cell weui-cell_input weui-cell_vcode">
          <view class="weui-cell__hd">
            <view class="weui-label">手机号</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" placeholder="请输入手机号" value='{{user.phone}}'></input>
          </view>
          <view class="weui-cell__ft">
            <button href="javascript:;" type='' style='margin-right: 24rpx;'  class="r_btn" hover-class='r_btn_hover' size="mini">获取验证码</button>
          </view>
        </view>

        <view class="weui-cell weui-cell_input weui-cell_vcode">
          <view class="weui-cell__hd">
            <view class="weui-label">验证码</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="number" placeholder="请输入验证码" />
          </view>
        </view>

        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">姓名</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="text" placeholder="请输入您的名字" value='{{user.nickName}}' />
          </view>
        </view>
        <view class='weui-cell'>
          <view class="weui-cell__hd">
            <view for="" class="weui-label">性别</view>
          </view>
          <view class='weui-cell__bd'>
            <radio-group>
              <radio checked="{{user.gender == '男'}}">男</radio>
              <radio style='margin-left:40rpx;' checked="{{user.gender == '女'}}">女</radio>
            </radio-group>
          </view>
        </view>
        <view class="weui-cell weui-cell_select">
          <view class="weui-cell__hd weui-cell__hd_in-select-after">
            <view class="weui-label">生日</view>
          </view>
          <view class="weui-cell__bd">
            <picker mode="date" value="{{user.birthday}}" start="09:01" end="21:01" bindchange="bindTimeChange">
              <view class="weui-select weui-select_in-select-after">{{user.birthday}}</view>
            </picker>
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">邮箱</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="text" placeholder="请输入您的邮箱" value='{{user.email}}' />
          </view>
        </view>
      </view>
      
      <view class="weui-btn-area">
            <button type='' class='r_btn' hover-class='r_btn_hover' form-type='submit'>确认</button>
      </view>
    </form>
  </view>
</view>